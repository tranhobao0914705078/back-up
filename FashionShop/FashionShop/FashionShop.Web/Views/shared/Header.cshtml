@using Microsoft.AspNet.Identity;
<div class="header">
    <div class="bottom-header header-view">
        <div class="container">
            <div class="header-bottom-left">
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")"><img class="logo-head" src="~/Assets/client/images/logo-house-removebg-preview.png" alt=" " /></a>
                </div>
                <div class="search search-edit">
                    <form action="tim-kiem.html" method="get">
                        <input type="text" id="txtKeyword" name="keyword" placeholder="Tìm kiếm">
                        <input type="submit" value="Tìm Kiếm" id="btnSearch">
                    </form>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="header-bottom-right">
                @using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { @id = "frmLogout" }))
                {
                    if (Request.IsAuthenticated)
                    {
                        @Html.AntiForgeryToken()
                        <ul class="login">
                            <li><a href="/tai-khoan.html"style="font-size: 14px;"><span> </span>Xin chào: @User.Identity.GetUserName()</a></li> |
                            <li><a href="#" id="btnLogout"style="font-size: 14px;">Đăng Xuất</a></li>
                        </ul>

                    }
                    else
                    {
                        <ul class="login">
                            <li><a href="/dang-nhap.html" style="font-size: 14px;"><span> </span>ĐĂNG NHẬP</a></li> |
                            <li><a href="/dang-ky.html"style="font-size: 14px;">ĐĂNG KÝ</a></li>
                        </ul>
                    }
                }

                <div class="cart"><a href="/gio-hang.html" style="font-size: 14px; "><span> </span>GIỎ HÀNG</a></div>
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>